<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="stick">
  <!--Input arguments-->
  <xacro:arg name="xyz" default="0 0 0" />
  <xacro:arg name="rpy" default="0 0 0" />
  <xacro:arg name="rotated" default="false" />

  <!--Gazebo requires a joint to a link called "world" for statically mounted robots-->
  <link name="world" />
  <joint name="world_joint" type="fixed">
    <origin xyz="$(arg xyz)" rpy="$(arg rpy)" />
    <parent link="world" />
    <child link="stick_link1" />
  </joint>

  <!--Create stick example links-->
  <link name="stick_link1">
    <visual>
      <origin xyz="0 0 0.05" />
      <geometry>
        <box size="0.02 0.02 0.08" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" />
      <geometry>
        <box size="0.02 0.02 0.08" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.05" />
      <mass value="${0.5*10./9.80}" />
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0" />
    </inertial>
  </link>
  <link name="stick_link2">
    <visual>
      <origin xyz="0 0 0.05" />
      <geometry>
        <box size="0.02 0.02 0.08" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" />
      <geometry>
        <box size="0.02 0.02 0.08" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.05" />
      <mass value="${0.5*10./9.80}" />
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0" />
    </inertial>
  </link>
  <link name="stick_link3">
    <visual>
      <origin xyz="0 0 0.05" />
      <geometry>
        <box size="0.02 0.02 0.08" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" />
      <geometry>
        <box size="0.02 0.02 0.08" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.05" />
      <mass value="${0.5*10./9.80}" />
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0" />
    </inertial>
  </link>

  <!--Create stick joints-->
  <!--  Problem joint-->
  <xacro:if value="$(arg rotated)">    <!--With rotation-->
    <joint name="stick_joint1" type="revolute">
      <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-2.8973" soft_upper_limit="2.8973"/>
      <origin xyz="0 0 0.1" rpy="${pi/2} -${pi/2} 0" />
      <parent link="stick_link1"/>
      <child link="stick_link2"/>
      <axis xyz="0 0 1"/>
      <limit acceleration="15" lower="-2.9671" effort="87" upper="2.9671" velocity="2.5"/>
      <dynamics D="1" K="7000" mu_coulomb="0" mu_viscous="16" damping="0.003" friction="0.0"/>
    </joint>
  </xacro:if>
  <xacro:unless value="$(arg rotated)">
    <joint name="stick_joint1" type="revolute">
      <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-2.8973" soft_upper_limit="2.8973"/>
      <origin xyz="0 0 0.1" rpy="${pi/2} -${pi/2} 0" />
      <parent link="stick_link1"/>
      <child link="stick_link2"/>
      <axis xyz="0 1 0"/>
      <limit acceleration="15" lower="-2.9671" effort="87" upper="2.9671" velocity="2.5"/>
      <dynamics D="1" K="7000" mu_coulomb="0" mu_viscous="16" damping="0.003" friction="0.0"/>
    </joint>
  </xacro:unless>

  <!--  Weight joint-->
  <joint name="stick_joint2" type="revolute">
    <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-2.8973" soft_upper_limit="2.8973"/>
    <origin xyz="0 0 0.1" rpy="${pi/2} 0 0"/>
    <parent link="stick_link2"/>
    <child link="stick_link3"/>
    <axis xyz="0 0 1"/>
    <limit acceleration="15" lower="-2.9671" effort="87" upper="2.9671" velocity="2.5"/>
    <dynamics D="1" K="7000" mu_coulomb="0" mu_viscous="16" damping="0.003" friction="0.0"/>
  </joint>

  <!--Create hardware interfaces-->
  <gazebo reference="stick_joint1">
    <!-- Needed for ODE to output external wrenches on joints -->
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="stick_joint2">
    <!-- Needed for ODE to output external wrenches on joints -->
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <transmission name="stick_joint1_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="stick_joint1">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="stick_joint1_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>
  <transmission name="stick_joint2_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="stick_joint2">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="stick_joint2_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>

  <!--Load gazebo controller plugin-->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <controlPeriod>0.001</controlPeriod>
      <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
    </plugin>
    <self_collide>true</self_collide>
  </gazebo>
</robot>